	</servlet>
	<servlet-mapping>
		<servlet-name>JebcorScratch</servlet-name>
		<url-pattern>/jebcorscratch</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>FetchUpdates</servlet-name>
		<servlet-class>com.lowetech.caltrainupdates.FetchUpdatesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>FetchUpdates</servlet-name>
		<url-pattern>/admin/fetchupdates</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Updates</servlet-name>
		<servlet-class>com.lowetech.caltrainupdates.UpdatesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Updates</servlet-name>
		<url-pattern>/updates</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Register</servlet-name>
		<servlet-class>com.lowetech.caltrainupdates.RegisterClientServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>NotifyClient</servlet-name>
		<servlet-class>com.lowetech.caltrainupdates.NotifyClientServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NotifyClient</servlet-name>
		<url-pattern>/tasks/notifyclient</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>PingClient</servlet-name>
		<servlet-class>com.lowetech.caltrainupdates.PingClientServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PingClient</servlet-name>
		<url-pattern>/admin/notifyclient</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>DeleteOldUpdates</servlet-name>
		<servlet-class>com.lowetech.caltrainupdates.DeleteOldUpdatesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DeleteOldUpdates</servlet-name>
		<url-pattern>/admin/deleteold</url-pattern>
	</servlet-mapping>
	  <servlet>
    <servlet-name>c2dmRetryServlet</servlet-name>
    <servlet-class>com.google.android.c2dm.server.C2DMRetryServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>c2dmRetryServlet</servlet-name>
    <url-pattern>/tasks/c2dm</url-pattern>
  </servlet-mapping>
	
	
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
